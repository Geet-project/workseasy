<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.workseasy.com.ui.hradmin.employeeRegistration.SalaryStructureActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/round_actionbar"
        android:gravity="center"
        app:elevation="5dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_arrow_circle_left_24" />

                <TextView
                    android:id="@+id/txt_actiontitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/backBtn"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:text="Salary Structure"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:layout_marginTop="@dimen/_20sdp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_4sdp"
                app:cardElevation="@dimen/_4sdp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salary Details"
                        android:id="@+id/salarydetail"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Salary Type"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toLeftOf="@id/noti_icon"
                            android:layout_weight="1"
                            android:background="@drawable/edit_bg">

                            <com.skydoves.powerspinner.PowerSpinnerView
                                android:id="@+id/SalaryTypeSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:hint="Select Salary Type"
                                android:padding="10dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="12sp"
                                app:spinner_arrow_gravity="end"
                                app:spinner_arrow_padding="8dp"
                                app:spinner_arrow_tint="@color/hintcolor"
                                app:spinner_divider_color="@color/hintcolor"
                                app:spinner_divider_show="true"
                                app:spinner_divider_size="0.4dp"
                                app:spinner_popup_animation="dropdown"
                                app:spinner_popup_background="@color/white"
                                app:spinner_popup_elevation="14dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Value"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/NameEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_bg"
                        android:capitalize="characters"
                        android:hint="Enter Value"
                        android:inputType="textCapCharacters"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_14sdp"
                        android:textAllCaps="true"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="@dimen/_10sdp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/savebtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/teal_200"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:text="Submit"
                        android:textColor="@color/white" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_4sdp"
                app:cardElevation="@dimen/_4sdp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Earning List"
                        android:id="@+id/earninglistname"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <!--          Attendance-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_weight="1"
                                    android:text="Name"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_weight="1"
                                    android:text="Value"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:text="Action"/>
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/earninglist_item"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:orientation="vertical"
                                android:id="@+id/earningListRecycler"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_4sdp"
                app:cardElevation="@dimen/_4sdp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deduction List"
                        android:id="@+id/deductionname"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <!--          Attendance-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Type"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="EPF"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="VPF"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="ESIC"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="LWF"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="PT"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="TDS"/>
                        </LinearLayout>
                        <!--          Earning-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Amount"
                                android:gravity="start"
                                android:layout_weight="1"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/epfvalue"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Monthly Net Payment"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/vpfvalue"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Monthly Benefits"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/esicvalue"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="SL"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lwfvalue"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Monthly CTC"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ptvalue"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Annual CTC"/>
                        </LinearLayout>
                        <!--          Deduction-->

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_4sdp"
                app:cardElevation="@dimen/_4sdp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Benefits"
                        android:id="@+id/benefitsname"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <!--          Attendance-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="EPF"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="EPS"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Admin"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="ESIC"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="LWF"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Bonus"/>
                        </LinearLayout>
                        <!--          Earning-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Value"
                                android:gravity="start"
                                android:layout_weight="1"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/epfvaluebenefit"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Monthly Net Payment"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/epsvaluebenefit"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Monthly Benefits"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/adminvaluebenefit"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="SL"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/esicValueBenefit"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Monthly CTC"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lwfValueBenefit"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Annual CTC"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/bonusbenefitvalue"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Bonusbenefitvalue"/>
                        </LinearLayout>
                        <!--          Deduction-->

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_4sdp"
                app:cardElevation="@dimen/_4sdp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Annual CTC"
                        android:id="@+id/monthname"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <!--          Attendance-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Monthly Net Payment"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Monthly Benefits"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Monthly CTC"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text="Annual CTC"/>
                        </LinearLayout>
                        <!--          Earning-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Value"
                                android:gravity="start"
                                android:layout_weight="1"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/monthlynetPaymentvalue"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text=""/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/monthlyBenefitsTv"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text=""/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/monthlyCtcTv"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:textSize="11.5sp"
                                android:text=""/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/AnnualCtcTv"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_5sdp"
