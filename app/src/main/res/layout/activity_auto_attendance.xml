<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.hradmin.attendance.AttendanceForm1Activity">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            app:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/round_actionbar"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_circle_left_24" />
                    <TextView
                        android:id="@+id/txt_actiontitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/backBtn"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:text="Auto Attendance"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appBarLayout"
            android:layout_above="@id/bottmLayout"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@color/white"
                    android:paddingRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1.4"
                        app:civ_border_width="1dp"
                        android:padding="@dimen/_3sdp"
                        app:civ_border_color="@color/purple_200"
                        android:src="@drawable/profilephoto"
                        android:id="@+id/empProfilePhoto"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anubhav Kumar"
                            android:id="@+id/empName"
                            android:textSize="16sp"
                            android:textColor="@color/purple_200"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senior Employee"
                            android:id="@+id/empDepartment"
                            android:textSize="14sp"
                            android:textColor="@color/textcolor"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senior Employee"
                            android:id="@+id/empDesignation"
                            android:textSize="14sp"
                            android:textColor="@color/textcolor"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="9123456789"
                            android:id="@+id/empNumber"
                            android:drawablePadding="@dimen/_4sdp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_baseline_call_24"
                            android:textSize="14sp"
                            android:textColor="@color/textcolor"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:text="457890"
                        android:gravity="right"
                        android:id="@+id/empCode"
                        android:textColor="@color/textcolor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/white"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Punching Timing"
                            android:textSize="15sp"
                            android:textColor="@color/purple_200"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/currentDate"
                            android:layout_alignParentRight="true"
                            android:text="2 Sep 2021" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="From Date"
                            android:textColor="#ABABAB"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/fromDate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/edit_bg"
                            android:drawableRight="@drawable/ic_path_92"
                            android:gravity="center_vertical"
                            android:hint="From Date"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_14sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:textColorHint="@color/hintcolor"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To Date"
                            android:textColor="#ABABAB"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/toDate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/edit_bg"
                            android:drawableRight="@drawable/ic_path_92"
                            android:gravity="center_vertical"
                            android:hint="To Date"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_14sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:textColorHint="@color/hintcolor"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <RelativeLayout
            android:id="@+id/bottmLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/prevBtn"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_green_btn"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <ImageView
                    android:id="@+id/nextBtn"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/circle_green_btn"
                    android:clickable="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>