<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.administrations.ChangePasswordActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        app:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/round_actionbar"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:clickable="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_circle_left_24" />
                <TextView
                    android:id="@+id/txt_actiontitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/backBtn"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:text="Change Password"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Enter Old Password"
        android:fontFamily="@font/poppinsregualr"
        android:textColor="#ABABAB" />
    <EditText
        android:id="@+id/oldpassEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/edit_bg"
        android:hint="Old Password"
        android:inputType="textPassword"
        android:lines="5"
        android:paddingLeft="@dimen/_14sdp"
        android:textColorHint="@color/hintcolor"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/oldpasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="*Please enter email address"
        android:textColor="#B51414"
        android:textSize="12sp"
        android:visibility="gone" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="New Password"
        android:fontFamily="@font/poppinsregualr"
        android:textColor="#ABABAB" />
    <EditText
        android:id="@+id/newpassEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/edit_bg"
        android:hint="Enter Amount"
        android:inputType="textPassword"
        android:lines="5"
        android:paddingLeft="@dimen/_14sdp"
        android:textColorHint="@color/hintcolor"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/newpasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="*Please enter email address"
        android:textColor="#B51414"
        android:textSize="12sp"
        android:visibility="gone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Confirm Password"
        android:fontFamily="@font/poppinsregualr"
        android:textColor="#ABABAB" />
    <EditText
        android:id="@+id/cpasset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/edit_bg"
        android:hint="Enter Amount"
        android:inputType="textPassword"
        android:lines="5"
        android:paddingLeft="@dimen/_14sdp"
        android:textColorHint="@color/hintcolor"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/cpasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="*Please enter email address"
        android:textColor="#B51414"
        android:textSize="12sp"
        android:visibility="gone" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:secondaryProgressTint="@color/purple_200"
        android:progressBackgroundTint="@color/purple_200"
        android:progressTint="@color/purple_200"
        android:layout_marginTop="@dimen/_20sdp"/>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/nextBtn"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/nextbtnround"
        android:layout_gravity="end"/>
</LinearLayout>
</layout>