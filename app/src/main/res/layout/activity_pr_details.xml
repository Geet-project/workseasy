<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.purchase.screens.RaisePrActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            app:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/round_actionbar"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_circle_left_24" />

                    <TextView
                        android:id="@+id/txt_actiontitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/backBtn"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:text="PR Details"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/scrollview"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Item"
                            android:textColor="@color/textcolor" />

                        <EditText
                            android:id="@+id/itemEt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/edit_bg"
                            android:hint="Enter Item"
                            android:inputType="text"
                            android:textColorHint="@color/hintcolor"
                            android:maxLines="1"
                            android:enabled="false"
                            android:paddingLeft="@dimen/_14sdp"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/itemError"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*Please enter age"
                            android:textColor="#B51414"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Make"
                            android:textColor="@color/textcolor" />

                        <EditText
                            android:id="@+id/makeEt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/edit_bg"
                            android:hint="Make"
                            android:enabled="false"
                            android:inputType="text"
                            android:textColorHint="@color/hintcolor"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_14sdp"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/makeError"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*Please enter age"
                            android:textColor="#B51414"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Grade"
                    android:textColor="@color/textcolor" />
                <EditText
                    android:id="@+id/GradeEt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/edit_bg"
                    android:hint="Enter Grade"
                    android:inputType="text"
                    android:enabled="false"
                    android:textColorHint="@color/hintcolor"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_14sdp"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/gradeError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="*Please enter email address"
                    android:textColor="#B51414"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Quantity"
                            android:textColor="@color/textcolor" />

                        <EditText
                            android:id="@+id/QtyEt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColorHint="@color/hintcolor"
                            android:background="@drawable/edit_bg"
                            android:hint="Enter Quantity"
                            android:inputType="number"
                            android:maxLines="1"
                            android:enabled="false"
                            android:paddingLeft="@dimen/_14sdp"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/qtyError"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*Please enter email address"
                            android:textColor="#B51414"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Unit"
                            android:textColor="@color/textcolor" />

                        <EditText
                            android:id="@+id/UnitEt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textColorHint="@color/hintcolor"
                            android:background="@drawable/edit_bg"
                            android:hint="Enter Unit"
                            android:inputType="number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:enabled="false"
                            android:paddingLeft="@dimen/_14sdp"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/unitError"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*Please enter email address"
                            android:textColor="#B51414"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Delivery"
                    android:textColor="@color/textcolor" />

                <EditText
                    android:id="@+id/DeliveryEt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/edit_bg"
                    android:hint="Enter Delivery"
                    android:enabled="false"
                    android:inputType="text"
                    android:textColorHint="@color/hintcolor"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_14sdp"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/deliveryError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="*Please enter email address"
                    android:textColor="#B51414"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="Remark"
                    android:textColor="@color/textcolor" />

                <EditText
                    android:id="@+id/RemarkEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/edit_bg"
                    android:hint="Enter Remarks "
                    android:inputType="textMultiLine"
                    android:maxLines="1"
                    android:enabled="false"
                    android:lines="5"
                    android:paddingLeft="@dimen/_14sdp"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/remarkError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="*Please enter email address"
                    android:textColor="#B51414"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:progressBackgroundTint="@color/purple_200"
            android:progressTint="@color/purple_200"
            android:secondaryProgressTint="@color/purple_200"
            android:visibility="visible" />

    </LinearLayout>
</layout>