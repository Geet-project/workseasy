<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.workseasy.com.ui.hradmin.employeelist.ViewCardsActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/round_actionbar"
            android:gravity="center"
            app:elevation="5dp"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/ic_baseline_arrow_circle_left_24" />

                    <TextView
                        android:id="@+id/txt_actiontitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/backBtn"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:text="HR &amp; Admin"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/BasicDetailCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/firstcardbg"
                    android:paddingTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/regisicon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/registrationicon" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-30dp"
                        android:layout_marginBottom="-120dp"
                        android:src="@drawable/mask" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@id/regisicon"
                        android:text="Basic Details"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/AddressDetailCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/firstcardbg"
                    android:paddingTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/regisicon1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/registrationicon" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-30dp"
                        android:layout_marginBottom="-120dp"
                        android:src="@drawable/mask" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@id/regisicon1"
                        android:text="Address Details"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/HrDetailCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/firstcardbg"
                    android:paddingTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/regisicon2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/registrationicon" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-30dp"
                        android:layout_marginBottom="-120dp"
                        android:src="@drawable/mask" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@id/regisicon2"
                        android:text="HR Details"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/SituatoryCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/firstcardbg"
                    android:paddingTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/regisicon3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/registrationicon" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-30dp"
                        android:layout_marginBottom="-120dp"
                        android:src="@drawable/mask" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@id/regisicon3"
                        android:text="Situatory Setting"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/SalaryStructureCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/firstcardbg"
                    android:paddingTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/regisicon4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/registrationicon" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-30dp"
                        android:layout_marginBottom="-120dp"
                        android:src="@drawable/mask" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@id/regisicon4"
                        android:text="Salary Structure"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/WorkExpCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/firstcardbg"
                    android:paddingTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/regisicon5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/registrationicon" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-30dp"
                        android:layout_marginBottom="-120dp"
                        android:src="@drawable/mask" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@id/regisicon5"
                        android:text="Work Experience"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/FamilyDetailCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/firstcardbg"
                    android:paddingTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/regisicon6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/registrationicon" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-30dp"
                        android:layout_marginBottom="-120dp"
                        android:src="@drawable/mask" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@id/regisicon6"
                        android:text="Family Detail"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/SalaryHistoryCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/firstcardbg"
                    android:paddingTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/regisicon7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/registrationicon" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-30dp"
                        android:layout_marginBottom="-120dp"
                        android:src="@drawable/mask" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@id/regisicon7"
                        android:text="Salary History"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</layout>