<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:id="@+id/approveTopLayout"
            android:visibility="visible"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_weight="1.4"
                app:civ_border_width="1dp"
                android:padding="@dimen/_3sdp"
                android:layout_gravity="left"
                app:civ_border_color="@color/purple_200"
                android:src="@drawable/profilephoto"
                android:id="@+id/empProfilePhoto"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anubhav Kumar"
                    android:id="@+id/empName"
                    android:textSize="16sp"
                    android:textColor="@color/purple_200"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior Employee"
                    android:id="@+id/empDesignation"
                    android:textSize="14sp"
                    android:textColor="@color/textcolor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_gravity="bottom"
                    android:text="Employee Code - 457890"
                    android:id="@+id/empCode"
                    android:gravity="bottom"
                    android:textSize="14sp"
                    android:textColor="@color/textcolor"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.7">

                <TextView
                    android:id="@+id/currentDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:text="7 Jan 2022"
                    android:textColor="@color/textcolor" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RejectedLayout"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_8sdp">

            <TextView
                android:id="@+id/ApproveDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="7 Jan 2022"
                android:textColor="@color/textcolor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/leaveApproveStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Rejected"
                android:textColor="@color/red_color" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave Duration"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/textcolor"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/_20sdp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/leaveDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="7 Jan 2022  To  21 Jan 2022"
                android:textColor="#1947C6"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalLeaveDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:text="15 Days"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#E5E5E5"
            android:layout_marginTop="@dimen/_8sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason of Leave"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/textcolor"
                android:textSize="15sp"
                android:layout_marginLeft="@dimen/_20sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Reason"
                android:id="@+id/leaveReasonTv"
                android:textColor="#8A8A8A"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/_20sdp"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ApproveRejectLayout"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/approvebtn"
                android:backgroundTint="@color/purple_200"
                android:text="Approve"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:background="@drawable/edit_bg"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:id="@+id/rejectbtn"
                android:backgroundTint="@color/red_color"
                android:text="Reject"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:background="@drawable/edit_bg"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/commentbtn"
                android:backgroundTint="@color/purple_200"
                android:text="Comment"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:background="@drawable/edit_bg"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>