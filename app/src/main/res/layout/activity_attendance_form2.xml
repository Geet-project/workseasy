<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.hradmin.attendance.AttendanceForm1Activity">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            app:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/round_actionbar"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_circle_left_24" />

                    <TextView
                        android:id="@+id/txt_actiontitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/backBtn"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:text="Monthly With Leave"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottmLayout"
            android:layout_below="@id/appBarLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/monthTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/edit_bg"
                    android:drawableRight="@drawable/ic_baseline_calendar_month_24"
                    android:gravity="center_vertical"
                    android:hint="Jan,2021"
                    android:lines="5"
                    android:paddingLeft="@dimen/_14sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingRight="@dimen/_20sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/empProfilePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1.4"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/profilephoto"
                        app:civ_border_color="@color/purple_200"
                        app:civ_border_width="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/empName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anubhav Kumar"
                            android:textColor="@color/purple_200"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senior Employee"
                            android:id="@+id/empDepartment"
                            android:textSize="14sp"
                            android:textColor="@color/textcolor"/>

                        <TextView
                            android:id="@+id/empDesignation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senior Employee"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/empNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:drawableLeft="@drawable/ic_baseline_call_24"
                            android:drawablePadding="@dimen/_4sdp"
                            android:gravity="center"
                            android:text="9123456789"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/empCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:gravity="right"
                        android:text="457890"
                        android:textColor="@color/textcolor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="WD"
                                android:textColor="@color/textcolor" />
                            <EditText
                                android:id="@+id/wdEt"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/edit_bg"
                                android:hint="Enter WD"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_14sdp"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/wdError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="*Please enter email address"
                                android:textColor="#B51414"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="OT"
                                android:textColor="@color/textcolor" />

                            <EditText
                                android:id="@+id/OtET"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/edit_bg"
                                android:hint="Enter OT"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_14sdp"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/otError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="*Please enter email address"
                                android:textColor="#B51414"
                                android:textSize="12sp"
                                android:visibility="gone" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="EL"
                                android:textColor="@color/textcolor" />

                            <EditText
                                android:id="@+id/elET"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/edit_bg"
                                android:hint="Enter EL"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_14sdp"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/elError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="*Please enter email address"
                                android:textColor="#B51414"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CL"
                                android:textColor="@color/textcolor" />

                            <EditText
                                android:id="@+id/clET"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/edit_bg"
                                android:hint="Enter OT"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_14sdp"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/clError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="*Please enter email address"
                                android:textColor="#B51414"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SL"
                                android:textColor="@color/textcolor" />

                            <EditText
                                android:id="@+id/slET"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/edit_bg"
                                android:hint="Enter SL"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_14sdp"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/slError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="*Please enter email address"
                                android:textColor="#B51414"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="HD"
                                android:textColor="@color/textcolor" />

                            <EditText
                                android:id="@+id/HdET"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/edit_bg"
                                android:hint="Enter HD"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_14sdp"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/hdError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="*Please enter email address"
                                android:textColor="#B51414"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="WO"
                                android:textColor="@color/textcolor" />

                            <EditText
                                android:id="@+id/woEt"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/edit_bg"
                                android:hint="Enter WO"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_14sdp"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/woError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="*Please enter email address"
                                android:textColor="#B51414"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="PD"
                            android:textColor="@color/textcolor" />

                        <EditText
                            android:id="@+id/PdET"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:background="@drawable/edit_bg"
                            android:hint="Enter PD"
                            android:editable="false"
                            android:clickable="false"
                            android:inputType="number"
                            android:maxLines="1"
                            android:focusable="false"
                            android:paddingLeft="@dimen/_14sdp"
                            android:textColorHint="@color/hintcolor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/pdError"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*Please enter email address"
                            android:textColor="#B51414"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/bottmLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/prevBtn"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_green_btn"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <ImageView
                    android:id="@+id/nextBtn"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/circle_green_btn"
                    android:clickable="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>