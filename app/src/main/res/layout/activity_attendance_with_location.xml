<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.hradmin.attendance.AttendanceForm1Activity">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            app:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/round_actionbar"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_circle_left_24" />
                    <TextView
                        android:id="@+id/txt_actiontitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/backBtn"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:text="Attendance With Location"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appBarLayout"
            android:layout_above="@id/bottmLayout"
            android:fillViewport="true"
            tools:ignore="NotSibling">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mainLayout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@color/white"
                    android:paddingRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1.4"
                        app:civ_border_width="1dp"
                        android:padding="@dimen/_3sdp"
                        app:civ_border_color="@color/purple_200"
                        android:src="@drawable/profilephoto"
                        android:id="@+id/empProfilePhoto"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anubhav Kumar"
                            android:id="@+id/empName"
                            android:textSize="16sp"
                            android:textColor="@color/purple_200"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senior Employee"
                            android:id="@+id/empDesignation"
                            android:textSize="14sp"
                            android:textColor="@color/textcolor"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="9123456789"
                            android:id="@+id/empNumber"
                            android:drawablePadding="@dimen/_4sdp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_baseline_call_24"
                            android:textSize="14sp"
                            android:textColor="@color/textcolor"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:text="457890"
                        android:gravity="right"
                        android:id="@+id/empCode"
                        android:textColor="@color/textcolor"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:id="@+id/punchintime"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:text="Punch In Time: "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/punchouttime"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:text="Punch In Time: "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:id="@+id/location"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:text="Location: "/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/punchInBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:background="@color/teal_200"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:text="Punch In"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/punchOutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:visibility="visible"
                    android:background="@color/teal_200"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:text="Punch Out"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>