<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.purchase.screens.PrPendingQuotationActivity">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            app:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/round_actionbar"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_circle_left_24" />

                    <TextView
                        android:id="@+id/txt_actiontitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/backBtn"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:text="Create Quotation"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/scrollviewlayout"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Vendor"
                        android:textColor="@color/textcolor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_bg">
                        <com.skydoves.powerspinner.PowerSpinnerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:hint="Select Vendor"
                            android:textColor="#858484"
                            android:id="@+id/vendorSpinner"
                            android:textColorHint="#C8C5C5"
                            android:textSize="13sp"
                            android:entries="@array/genderArray"
                            app:spinner_arrow_gravity="end"
                            app:spinner_arrow_padding="8dp"
                            app:spinner_arrow_tint="@color/purple_200"
                            app:spinner_divider_color="@color/purple_200"
                            app:spinner_divider_show="true"
                            app:spinner_divider_size="0.4dp"
                            app:spinner_popup_animation="dropdown"
                            app:spinner_popup_background="#fff"
                            app:spinner_popup_elevation="14dp" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Make"
                        android:textColor="@color/textcolor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_bg">
                        <com.skydoves.powerspinner.PowerSpinnerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:hint="Select Make"
                            android:textColor="#858484"
                            android:id="@+id/makeSpinner"
                            android:textColorHint="#C8C5C5"
                            android:textSize="13sp"
                            android:entries="@array/genderArray"
                            app:spinner_arrow_gravity="end"
                            app:spinner_arrow_padding="8dp"
                            app:spinner_arrow_tint="@color/purple_200"
                            app:spinner_divider_color="@color/purple_200"
                            app:spinner_divider_show="true"
                            app:spinner_divider_size="0.4dp"
                            app:spinner_popup_animation="dropdown"
                            app:spinner_popup_background="#fff"
                            app:spinner_popup_elevation="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Grade"
                        android:textColor="@color/textcolor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_bg">
                        <com.skydoves.powerspinner.PowerSpinnerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:hint="Select Grade"
                            android:textColor="#858484"
                            android:id="@+id/gradeSpinner"
                            android:textColorHint="#C8C5C5"
                            android:textSize="13sp"
                            android:entries="@array/genderArray"
                            app:spinner_arrow_gravity="end"
                            app:spinner_arrow_padding="8dp"
                            app:spinner_arrow_tint="@color/purple_200"
                            app:spinner_divider_color="@color/purple_200"
                            app:spinner_divider_show="true"
                            app:spinner_divider_size="0.4dp"
                            app:spinner_popup_animation="dropdown"
                            app:spinner_popup_background="#fff"
                            app:spinner_popup_elevation="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Quantity"
                    android:textColor="@color/textcolor" />

                <EditText
                    android:id="@+id/qtyEt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/edit_bg"
                    android:hint="Enter Quantity"
                    android:inputType="text"
                    android:enabled="false"
                    android:textColorHint="@color/hintcolor"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_14sdp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Unit"
                    android:textColor="@color/textcolor" />

                <EditText
                    android:id="@+id/unitEt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/edit_bg"
                    android:hint="Enter Unit"
                    android:inputType="text"
                    android:textColorHint="@color/hintcolor"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_14sdp"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delievery Time"
                        />

                    <TextView
                        android:id="@+id/tvdate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_bg"
                        android:drawableRight="@drawable/ic_path_92"
                        android:gravity="center_vertical"
                        android:hint="Delivery Date"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_14sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rate"
                        />

                    <EditText
                        android:id="@+id/rateEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:hint="Enter Rate"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_14sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DISC %"
                        />

                    <EditText
                        android:id="@+id/discEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:hint="Enter Discount"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_14sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="GST"
                        android:textColor="@color/textcolor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_bg">
                        <com.skydoves.powerspinner.PowerSpinnerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:hint="Select GST"
                            android:textColor="#858484"
                            android:id="@+id/gstSpinner"
                            android:textColorHint="#C8C5C5"
                            android:textSize="13sp"
                            android:entries="@array/genderArray"
                            app:spinner_arrow_gravity="end"
                            app:spinner_arrow_padding="8dp"
                            app:spinner_arrow_tint="@color/purple_200"
                            app:spinner_divider_color="@color/purple_200"
                            app:spinner_divider_show="true"
                            app:spinner_divider_size="0.4dp"
                            app:spinner_popup_animation="dropdown"
                            app:spinner_popup_background="#fff"
                            app:spinner_popup_elevation="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fraight"
                        />

                    <EditText
                        android:id="@+id/fraightEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:hint="Enter Fraight"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_14sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RMK"
                        />

                    <EditText
                        android:id="@+id/rmkEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:hint="Enter RMK"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_14sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Payment Terms"
                        android:textColor="@color/textcolor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_bg">
                        <com.skydoves.powerspinner.PowerSpinnerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:hint="Select Payment Terms"
                            android:textColor="#858484"
                            android:id="@+id/paymentTermsSpinner"
                            android:textColorHint="#C8C5C5"
                            android:textSize="13sp"
                            android:entries="@array/genderArray"
                            app:spinner_arrow_gravity="end"
                            app:spinner_arrow_padding="8dp"
                            app:spinner_arrow_tint="@color/purple_200"
                            app:spinner_divider_color="@color/purple_200"
                            app:spinner_divider_show="true"
                            app:spinner_divider_size="0.4dp"
                            app:spinner_popup_animation="dropdown"
                            app:spinner_popup_background="#fff"
                            app:spinner_popup_elevation="14dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/SubmitBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:gravity="center|center_vertical"
                        android:text="Submit" />
                </LinearLayout>











            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:progressBackgroundTint="@color/purple_200"
            android:progressTint="@color/purple_200"
            android:secondaryProgressTint="@color/purple_200"
            android:visibility="gone" />



    </LinearLayout>
</layout>
