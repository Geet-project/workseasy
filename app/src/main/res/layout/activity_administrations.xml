<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.hradmin.HrAdminActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            app:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/round_actionbar"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:clickable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_circle_left_24" />
                    <TextView
                        android:id="@+id/txt_actiontitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/backBtn"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:text="Administration"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:id="@+id/MPinChangeCard"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/firstcardbg">

                    <ImageView
                        android:id="@+id/regisicon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/mpinicon" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-30dp"
                        android:layout_marginBottom="-120dp"
                        android:src="@drawable/mask" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@id/regisicon"
                        android:text="M-Pin Change"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:visibility="gone"
                    android:id="@+id/ChangePasswordCard"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/empgradient">

                    <ImageView
                        android:id="@+id/empicon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/changepasswordicon" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-30dp"
                        android:layout_marginBottom="-120dp"
                        android:src="@drawable/mask" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@id/empicon"
                        android:text="Change Password"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:visibility="gone"
                    android:id="@+id/AssigEmployeeCard"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/empgradient">

                    <ImageView
                        android:id="@+id/assignicon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/changepasswordicon" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="-30dp"
                        android:layout_marginBottom="-120dp"
                        android:src="@drawable/mask" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@id/assignicon"
                        android:text="Assign Employee"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
