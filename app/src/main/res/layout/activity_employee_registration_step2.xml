<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.hradmin.employeeRegistration.EmployeeRegistrationStep1">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            app:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/round_actionbar"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_circle_left_24" />

                    <TextView
                        android:id="@+id/txt_actiontitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/backBtn"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:text="Address Details"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Permanent Address"
                        android:textColor="@color/textcolor" />

                    <EditText
                        android:id="@+id/PermanentEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/edit_bg"
                        android:hint="Enter Permanent Address"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:paddingLeft="@dimen/_14sdp"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_18sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="State"
                                android:textColor="@color/textcolor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/edit_bg">

                                <com.skydoves.powerspinner.PowerSpinnerView
                                    android:id="@+id/stateSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:hint="Select State"
                                    android:padding="10dp"
                                    android:textColor="#858484"
                                    android:textColorHint="#C8C5C5"
                                    android:textSize="12sp"
                                    app:spinner_arrow_gravity="end"
                                    app:spinner_arrow_padding="8dp"
                                    app:spinner_arrow_tint="@color/purple_200"
                                    app:spinner_divider_color="@color/purple_200"
                                    app:spinner_divider_show="true"
                                    app:spinner_divider_size="0.4dp"
                                    app:spinner_popup_animation="dropdown"
                                    app:spinner_popup_background="#fff"
                                    app:spinner_popup_elevation="14dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="District"
                                android:textColor="@color/textcolor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/edit_bg">
                                <com.skydoves.powerspinner.PowerSpinnerView
                                    android:id="@+id/districtSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:hint="Select District"
                                    android:padding="10dp"
                                    android:textColor="#858484"
                                    android:textColorHint="#C8C5C5"
                                    android:textSize="12sp"
                                    app:spinner_arrow_gravity="end"
                                    app:spinner_arrow_padding="8dp"
                                    app:spinner_arrow_tint="@color/purple_200"
                                    app:spinner_divider_color="@color/purple_200"
                                    app:spinner_divider_show="true"
                                    app:spinner_divider_size="0.4dp"
                                    app:spinner_popup_animation="dropdown"
                                    app:spinner_popup_background="#fff"
                                    app:spinner_popup_elevation="14dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_18sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Pincode"
                                android:textColor="@color/textcolor" />

                            <EditText
                                android:id="@+id/PincodeEt"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_bg"
                                android:hint="Enter Pincode"
                                android:inputType="number"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_14sdp"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:text="Same as Permanent Address"
                        android:id="@+id/checkBox2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Present Address"
                        android:textColor="@color/textcolor" />

                    <EditText
                        android:id="@+id/PresentET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/edit_bg"
                        android:hint="Enter Address"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:paddingLeft="@dimen/_14sdp"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/presentAddressError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_22sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:text="*Please enter email address"
                        android:textColor="#B51414"
                        android:textSize="12sp"
                        android:visibility="gone" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_18sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="State"
                                android:textColor="@color/textcolor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/edit_bg">

                                <com.skydoves.powerspinner.PowerSpinnerView
                                    android:id="@+id/state1Spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:hint="Select State"
                                    android:padding="10dp"
                                    android:textColor="#858484"
                                    android:textColorHint="#C8C5C5"
                                    android:textSize="12sp"
                                    app:spinner_arrow_gravity="end"
                                    app:spinner_arrow_padding="8dp"
                                    app:spinner_arrow_tint="@color/purple_200"
                                    app:spinner_divider_color="@color/purple_200"
                                    app:spinner_divider_show="true"
                                    app:spinner_divider_size="0.4dp"
                                    app:spinner_popup_animation="dropdown"
                                    app:spinner_popup_background="#fff"
                                    app:spinner_popup_elevation="14dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="District"
                                android:textColor="@color/textcolor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:background="@drawable/edit_bg">
                                <com.skydoves.powerspinner.PowerSpinnerView
                                    android:id="@+id/districtSpinner1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:hint="Select District"
                                    android:padding="10dp"
                                    android:textColor="#858484"
                                    android:textColorHint="#C8C5C5"
                                    android:textSize="12sp"
                                    app:spinner_arrow_gravity="end"
                                    app:spinner_arrow_padding="8dp"
                                    app:spinner_arrow_tint="@color/purple_200"
                                    app:spinner_divider_color="@color/purple_200"
                                    app:spinner_divider_show="true"
                                    app:spinner_divider_size="0.4dp"
                                    app:spinner_popup_animation="dropdown"
                                    app:spinner_popup_background="#fff"
                                    app:spinner_popup_elevation="14dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_18sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Pincode"
                                android:textColor="@color/textcolor" />

                            <EditText
                                android:id="@+id/PincodeEt1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:background="@drawable/edit_bg"
                                android:hint="Enter Pincode"
                                android:inputType="number"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_14sdp"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/savebtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:background="@color/teal_200"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:text="Save"
                        android:textColor="@color/white" />

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</layout>