<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.hradmin.HrAdminActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        app:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/round_actionbar"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:clickable="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_circle_left_24" />

                <TextView
                    android:id="@+id/txt_actiontitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/backBtn"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:text="HR &amp; Admin"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:id="@+id/EmployeeRegistationCard"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/firstcardbg">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/regisicon"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/registrationicon"/>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-30dp"
                    android:layout_marginBottom="-120dp"
                    android:src="@drawable/mask" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_toRightOf="@id/regisicon"
                    android:text="Employee Registration"
                    android:textColor="#fff"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:id="@+id/EmpListCard"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/empgradient">

                <ImageView
                    android:id="@+id/empicon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/empicon" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-30dp"
                    android:layout_marginBottom="-120dp"
                    android:src="@drawable/mask" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toRightOf="@id/empicon"
                    android:text="Employees List"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:id="@+id/attendanceCard"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/attendacnegradient">

                <ImageView
                    android:id="@+id/attenicon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/attendanceicon" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginBottom="-120dp"
                    android:layout_marginRight="-30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/mask"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toRightOf="@id/attenicon"
                    android:text="Attendance"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:id="@+id/LeaveRequestCard"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/leaveentrygradient">

                <ImageView
                    android:id="@+id/leaveEnteryIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/leaveenteryicon" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginBottom="-120dp"
                    android:layout_marginRight="-30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/mask"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toRightOf="@id/leaveEnteryIcon"
                    android:text="Leave Request Entry"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LeaveRequestApprovalCard"
                android:paddingTop="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/leavegradient">

                <ImageView
                    android:id="@+id/leaveicon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/leaveicon" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-30dp"
                    android:layout_marginBottom="-120dp"
                    android:src="@drawable/mask" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toRightOf="@id/leaveicon"
                    android:text="Leave Request Approval"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/advanceSalaryRequest"
                android:paddingTop="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/advanceenterygradient">

                <ImageView
                    android:id="@+id/salaryicon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/salarygradient" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginBottom="-120dp"
                    android:layout_marginRight="-30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/mask"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toRightOf="@id/salaryicon"
                    android:text="Advance Salary Request"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:id="@+id/advanceSalaryApproval"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/advancegradient">

                <ImageView
                    android:id="@+id/salaryadvicon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/salaryicon" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginBottom="-120dp"
                    android:layout_marginRight="-30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/mask"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_toRightOf="@id/salaryadvicon"
                    android:text="Advance salary approval"
                    android:textColor="#fff"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SalaryDetail"
                android:layout_marginBottom="@dimen/_40sdp"
                android:paddingTop="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/advancegradient">

                <ImageView
                    android:id="@+id/viewSalary"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/salarydetailicon" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-30dp"
                    android:layout_marginBottom="-120dp"
                    android:src="@drawable/mask" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_toRightOf="@id/viewSalary"
                    android:text="Salary detail"
                    android:textColor="#fff"
                    android:textSize="18sp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
</layout>